FROM node:20-alpine

# Install system dependencies including VR processing tools
RUN apk add --no-cache \
    nginx \
    supervisor \
    curl \
    bash \
    git \
    python3 \
    make \
    g++ \
    imagemagick \
    ffmpeg \
    libwebp-tools

# Create application directories
RUN mkdir -p /app/web /app/panorama /app/gateway /var/log/supervisor /var/log/nginx /usr/share/nginx/html

# Set working directory
WORKDIR /app

# Install production tools globally
RUN npm install -g nodemon typescript ts-node vite

# Copy package files for all services (will be overridden by volume mounts)
# These are just placeholders for initial build
RUN echo '{"name":"web-client","version":"1.0.0","scripts":{"dev":"vite --host 0.0.0.0 --port 5173"},"dependencies":{"vite":"^5.0.0"}}' > /app/web/package.json
RUN echo '{"name":"panorama-service","version":"1.0.0","scripts":{"dev":"nodemon --watch src --exec ts-node src/index.ts"},"dependencies":{"express":"^4.18.0"}}' > /app/panorama/package.json
RUN echo '{"name":"gateway-service","version":"1.0.0","scripts":{"dev":"nodemon --watch src --exec ts-node src/index.ts"},"dependencies":{"express":"^4.18.0"}}' > /app/gateway/package.json

# Install dependencies (will be overridden, but needed for build)
RUN cd /app/web && npm install --silent || true
RUN cd /app/panorama && npm install --silent || true
RUN cd /app/gateway && npm install --silent || true

# Build applications
# RUN cd /app/web && npm run build
# RUN cd /app/panorama && npm run build
# RUN cd /app/gateway && npm run build

# Copy NGINX configuration for Production (proxies to Vite prod server)
COPY nginx.prod.conf /etc/nginx/nginx.conf

# Copy supervisor configuration
COPY ./supervisor/supervisord.prod.conf /etc/supervisord.conf

# Create startup script
RUN cat > /start.sh <<'EOF'
#!/bin/bash
set -euo pipefail

echo "ğŸš€ Starting DreamScape Experience Pod (Development)"

# Install/update dependencies if package.json changed
if [ -f /app/web/package.json ]; then
    echo "ğŸ“¦ Installing Web Client dependencies..."
    cd /app/web && npm install --silent || {
        echo "âŒ Failed to install web client dependencies"
        exit 1
    }
fi

if [ -f /app/panorama/package.json ]; then
    echo "ğŸ“¦ Installing Panorama Service dependencies..."
    cd /app/panorama && npm install --silent || {
        echo "âŒ Failed to install panorama dependencies"
        exit 1
    }
fi

if [ -f /app/gateway/package.json ]; then
    echo "ğŸ“¦ Installing Gateway Service dependencies..."
    cd /app/gateway && npm install --silent || {
        echo "âŒ Failed to install gateway dependencies"
        exit 1
    }
fi

# Run database migrations
echo "ğŸ”„ Running database migrations..."
if [ -f /app/panorama/package.json ] && grep -q "migrate" /app/panorama/package.json 2>/dev/null; then
    cd /app/panorama && npm run migrate 2>/dev/null || echo "âš ï¸  No migrations found for panorama service"
fi

if [ -f /app/gateway/package.json ] && grep -q "migrate" /app/gateway/package.json 2>/dev/null; then
    cd /app/gateway && npm run migrate 2>/dev/null || echo "âš ï¸  No migrations found for gateway service"
fi

# Wait for dependencies
echo "â³ Waiting for infrastructure services..."
timeout 60 bash -c 'until curl -f http://minio:9000/minio/health/live 2>/dev/null; do sleep 2; done' || true

# Start supervisor (manages NGINX + Vite + Panorama + Gateway)
echo "âœ… Starting services with Supervisor..."
exec /usr/bin/supervisord -c /etc/supervisord.conf
EOF

RUN chmod +x /start.sh

# Expose ports
EXPOSE 80 5173 3006 4000 9234 9235

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

# Start services
RUN chmod +x /start.sh
RUN dos2unix /start.sh 2>/dev/null || sed -i 's/\r$//' /start.sh
CMD ["/start.sh"] 