# DreamScape Business Pod - Development Build
# Voyage Service + AI Service + Payment Service
# Architecture Hybride: 6-repos â†’ 3-Big-Pods
# DR-328: Hot reload enabled for local development

FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache \
    supervisor \
    curl \
    bash \
    git \
    python3 \
    make \
    g++ \
    imagemagick \
    ffmpeg

# Create application directories
RUN mkdir -p /app/voyage /app/ai /app/payment /var/log/supervisor

# Set working directory
WORKDIR /app

# Install nodemon globally for hot reload
RUN npm install -g nodemon typescript ts-node

# Copy package files for all services (will be overridden by volume mounts)
# These are just placeholders for initial build
RUN echo '{"name":"voyage-service","version":"1.0.0","scripts":{"dev":"nodemon --watch src --exec ts-node src/index.ts"},"dependencies":{"express":"^4.18.0"}}' > /app/voyage/package.json
RUN echo '{"name":"ai-service","version":"1.0.0","scripts":{"dev":"nodemon --watch src --exec ts-node src/index.ts"},"dependencies":{"express":"^4.18.0"}}' > /app/ai/package.json
RUN echo '{"name":"payment-service","version":"1.0.0","scripts":{"dev":"nodemon --watch src --exec ts-node src/index.ts"},"dependencies":{"express":"^4.18.0"}}' > /app/payment/package.json

# Install dependencies (will be overridden, but needed for build)
RUN cd /app/voyage && npm install --silent || true
RUN cd /app/ai && npm install --silent || true
RUN cd /app/payment && npm install --silent || true

# Copy supervisor configuration
COPY supervisord.conf /etc/supervisord.conf

# Create startup script
RUN cat > /start.sh <<'EOF'
#!/bin/bash
set -euo pipefail

echo "ğŸš€ Starting DreamScape Business Pod (Development)"

# Install/update dependencies if package.json changed
if [ -f /app/voyage/package.json ]; then
    echo "ğŸ“¦ Installing Voyage Service dependencies..."
    cd /app/voyage && npm install --silent || {
        echo "âŒ Failed to install voyage dependencies"
        exit 1
    }
fi

if [ -f /app/ai/package.json ]; then
    echo "ğŸ“¦ Installing AI Service dependencies..."
    cd /app/ai && npm install --silent || {
        echo "âŒ Failed to install ai dependencies"
        exit 1
    }
fi

if [ -f /app/payment/package.json ]; then
    echo "ğŸ“¦ Installing Payment Service dependencies..."
    cd /app/payment && npm install --silent || {
        echo "âŒ Failed to install payment dependencies"
        exit 1
    }
fi

# Run database migrations
echo "ğŸ”„ Running database migrations..."
if [ -f /app/voyage/package.json ] && grep -q "migrate" /app/voyage/package.json 2>/dev/null; then
    cd /app/voyage && npm run migrate 2>/dev/null || echo "âš ï¸  No migrations found for voyage service"
fi

if [ -f /app/payment/package.json ] && grep -q "migrate" /app/payment/package.json 2>/dev/null; then
    cd /app/payment && npm run migrate 2>/dev/null || echo "âš ï¸  No migrations found for payment service"
fi

# Wait for dependencies
echo "â³ Waiting for infrastructure services..."
timeout 60 bash -c 'until curl -f http://postgres:5432 2>/dev/null; do sleep 2; done' || true
timeout 60 bash -c 'until curl -f http://redis:6379 2>/dev/null; do sleep 2; done' || true

# Start supervisor (manages all 3 services)
echo "âœ… Starting services with Supervisor..."
exec /usr/bin/supervisord -c /etc/supervisord.conf
EOF

RUN chmod +x /start.sh

# Expose ports
EXPOSE 3003 3004 3005 9231 9232 9233

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3003/health || exit 1

# Start services
RUN chmod +x /start.sh
RUN dos2unix /start.sh 2>/dev/null || sed -i 's/\r$//' /start.sh
CMD ["/start.sh"]