# DreamScape Big Pods Development Environment Configuration
# DR-328: Environment variables for local development
# Copy this file to .env.bigpods.local and customize

# ===============================================
# Environment
# ===============================================
NODE_ENV=development
LOG_LEVEL=debug
TZ=UTC

# ===============================================
# Database Configuration
# ===============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dreamscape_dev
DB_USER=dev
DB_PASSWORD=dev123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===============================================
# Redis Configuration
# ===============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ===============================================
# Kafka Configuration
# ===============================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=dreamscape-dev
KAFKA_GROUP_ID=dreamscape-dev-group

# ===============================================
# MinIO S3 Storage
# ===============================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=dreamscape-dev
S3_SECRET_KEY=dreamscape-dev-secret
S3_BUCKET_VR_ASSETS=dreamscape-vr-assets
S3_BUCKET_USER_UPLOADS=dreamscape-user-uploads
S3_BUCKET_AI_GENERATIONS=dreamscape-ai-generations
S3_REGION=us-east-1
S3_USE_SSL=false

# ===============================================
# Authentication & Security
# ===============================================
JWT_SECRET=dev-jwt-secret-change-in-production-8f7a6b5c4d3e2f1a
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=dev-session-secret-change-in-production
BCRYPT_ROUNDS=10

# CORS Configuration (development - allow all)
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ===============================================
# External API Keys - Amadeus (Travel)
# ===============================================
# Get test keys from: https://developers.amadeus.com/
AMADEUS_API_KEY=your_amadeus_test_api_key
AMADEUS_API_SECRET=your_amadeus_test_api_secret
AMADEUS_HOSTNAME=test.api.amadeus.com
AMADEUS_ENV=test

# ===============================================
# External API Keys - Stripe (Payments)
# ===============================================
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# ===============================================
# External API Keys - OpenAI (AI Services)
# ===============================================
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===============================================
# External API Keys - Google Maps (Optional)
# ===============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===============================================
# Email Configuration (Development - Mailtrap recommended)
# ===============================================
# Sign up at: https://mailtrap.io/
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
SMTP_FROM_EMAIL=noreply@dreamscape.ai
SMTP_FROM_NAME=DreamScape

# ===============================================
# Frontend Configuration
# ===============================================
VITE_API_URL=http://localhost/api/v1
VITE_WS_URL=ws://localhost/ws
VITE_PANORAMA_URL=http://localhost:3006
VITE_GATEWAY_URL=http://localhost:4000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_HMR=true

# ===============================================
# Service Ports (Internal)
# ===============================================
# Core Pod
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
NGINX_PORT=80

# Business Pod
VOYAGE_SERVICE_PORT=3003
AI_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005

# Experience Pod
WEB_CLIENT_PORT=5173
PANORAMA_SERVICE_PORT=3006
GATEWAY_SERVICE_PORT=4000

# ===============================================
# Feature Flags
# ===============================================
FEATURE_AI_ITINERARY=true
FEATURE_VR_PANORAMA=true
FEATURE_PAYMENT_STRIPE=true
FEATURE_AMADEUS_BOOKING=true
FEATURE_ANALYTICS=false
FEATURE_DEBUG_MODE=true

# ===============================================
# Performance & Caching
# ===============================================
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# ===============================================
# File Upload Limits
# ===============================================
MAX_FILE_SIZE=10485760
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_FILE_TYPES=image/*,video/*,application/pdf

# ===============================================
# Monitoring & Logging
# ===============================================
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=false
SENTRY_DSN=
LOG_FORMAT=json
LOG_COLORIZE=true

# ===============================================
# Development Tools
# ===============================================
HOT_RELOAD=true
DEBUG=*
NODE_OPTIONS=--max-old-space-size=4096
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# ===============================================
# Testing
# ===============================================
TEST_DB_NAME=dreamscape_test
TEST_USER_EMAIL=dev@dreamscape.ai
TEST_USER_PASSWORD=password123

# ===============================================
# Docker Configuration
# ===============================================
COMPOSE_PROJECT_NAME=dreamscape-bigpods
COMPOSE_HTTP_TIMEOUT=200
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
